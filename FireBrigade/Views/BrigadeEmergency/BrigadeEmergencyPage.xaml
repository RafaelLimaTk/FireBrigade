<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FireBrigade.Views.BrigadeEmergency.BrigadeEmergencyPage"
             Title="BrigadeEmergencyPage">
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="10">

            <Label Text="CADASTRO BRIGADA DE EMERGÊNCIA"
                   FontSize="Medium"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20" />

            <Grid ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <SearchBar Grid.Column="1" 
                           Placeholder="Pesquisar..."
                           VerticalOptions="Center" />

                <Frame Grid.Column="0" 
                       WidthRequest="120" HeightRequest="120" 
                       CornerRadius="60" 
                       HorizontalOptions="Start" 
                       VerticalOptions="Center"
                       BorderColor="Black"
                       Margin="0,0,10,0">
                    <ImageButton Source="sua_imagem.png" 
                                 BackgroundColor="Transparent" 
                                 Aspect="AspectFill" />
                </Frame>
            </Grid>

            <Entry Placeholder="Polo" />
            <Entry Placeholder="Endereço" />
            <Entry Placeholder="Nome" />
            <Entry Placeholder="Função" />
            <Entry Placeholder="Setor" />
            <Entry Placeholder="Contato" />

            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="30">
                <Button Text="Salvar" BackgroundColor="Green" TextColor="White"/>
                <Button Text="Editar" BackgroundColor="Blue" TextColor="White"/>
                <Button Text="Excluir" BackgroundColor="Red" TextColor="White"/>
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>